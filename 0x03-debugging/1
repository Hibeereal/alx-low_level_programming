#include <stdio.h>

/**
 * positive_or_negative - "prints a number that checks if its negative
 * or positive"
 * @i: int value to be printed
 *
 * Return: Always 0
 */

void positive_or_negative(int i)
{
	if (i > 0)
	{
		printf("%d is %s\n", i, "positive");
	}
	else if (i < 0)
	{
		printf("%d is %s\n", i, "negative");
	}
	else
	{
		printf("%d is %s\n", i, "zero");
	}
}
